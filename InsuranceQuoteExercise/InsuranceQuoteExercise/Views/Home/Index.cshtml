<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Please enter your information</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("QuoteInfo", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-12">
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" required="required" />
                </div>
                <div class="form-group col-md-12">
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
                <div class="form-group col-md-12">
                    <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                </div>
                <div class="form-group col-md-12">
                    <input name="DateOfBirth" type="date" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarYear" type="text" class="form-control" placeholder="Car Year" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                </div>
                <div>
                    <h6>Have you ever had a DUI?</h6>
                    <select id="DUI" name="DUI">
                        <option value=false></option>
                        <option value=false>No</option>
                        <option value=true>Yes</option>
                    </select>
                </div>
                <div class="form-group col-md-12">
                    <input name="Tickets" type="text" class="form-control" placeholder="How many speeding tickets have you had?" />
                </div>
                <div>
                    <h6>Insurance Type</h6>
                    <select id="Full" name="Full">
                        <option value=false></option>
                        <option value=true>Full Coverage</option>
                        <option value=false>Liability</option>
                    </select>
                </div>
                <button type="submit" class="btn btm-block btn-primary">Calculate</button> 
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
               <h6>Your Quote: </h6> @ViewBag.finalQuote</div>
            }
        </div>
    </div>
</div>



